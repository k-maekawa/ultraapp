<h1>ウルトラマンにきいてみよう</h1>
<h2>☆みんなからの質問☆</h2>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead class="thead-light">
        <tr>
          <th>ID</th>
          <th>タイトル</th>
          <th>メニュー</th>
        </tr>
      </thead>
      <tbody>
        <% @questions.each do |question|%>
        <tr>
          <td><%= question.id%></td>
          <td><%= link_to question.title, question_path(question) %></td>
          <td>[<%= link_to "編集する", edit_question_path(question)%>][<%= link_to "削除する", question_path(question), method: :delete, data:{ confirm: "削除してよろしいですか？"}%>]</td>
        </tr>
        <%end%>
      </tbody>
    </table>
    <div>
      <%= link_to "新しく質問する！",new_question_path %>
    </div>
  </div>
</div>
