<div class="row">
  <div class="col-md-12">
    <h2><%= @question.title %></h2>
     <div>
       質問内容: <%= @question.content %>
     </div>
     <div>
       名前: <%= @question.name %>
     </div>
     <hr>

     <div class="">
       <h3>おへんじ！</h3>
       <table class="table table-striped">
         <% if @question.answers.any? %>
            <thead class="thead-light">
              <tr>
                <td>へんじ</td>
                <td>なまえ</td>
                <td>めにゅー</td>
              </tr>
            </thead>
            <tbody>
              <% @question.answers.each do |answer| %>
                <tr>
                  <td>
                    <%= answer.content %>
                  </td>
                  <td>
                    <%= answer.name %>
                  </td>
                  <td>
                    [<%= link_to "編集", edit_question_answer_path(@question, answer) %>]
                    [<%= link_to "削除", question_answer_path(@question, answer),
                    method: :delete, data:{ confirm: "削除してよろしいですか？"} %>]
                  </td>
                </tr>
              <% end %>
            </tbody>
         <% else %>
          <p>まっててね！</p>
         <% end %>
       </table>
     </div>


     

     <div>
       <%= link_to "⇨ホームへ⇦" , root_path %>
     </div>

     <div>
       <%= link_to "スタッフログイン" , root_path %>
     </div>

  </div>
</div>
